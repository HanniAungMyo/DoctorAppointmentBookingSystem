@model List<DoctorAppointmentBookingSystem.Data.Tbl_Role>
@{
    ViewBag.Title = "Index";
    int row = 0;
}


<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Role Name List</h5>

        <a href="/Role/Create" type="button" class="btn btn-primary mb-3">Create</a>
        <table id="myTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>RoleName</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    row = row + 1;
                    <tr>
                        <td>@row</td>
                        <td>@item.RoleName</td>
                        <td>
                            <a href="/Role/Edit?id=@item.Id" type="button" class="btn btn-success">Edit</a>
                            <a href="/Role/Delete?id=@item.Id" type="button" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

