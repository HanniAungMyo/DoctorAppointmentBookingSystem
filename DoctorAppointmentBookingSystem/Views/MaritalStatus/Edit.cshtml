@model DoctorAppointmentBookingSystem.Data.Tbl_MaritalStatus
@{
    ViewBag.Title = "Edit";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Edit Marital Status List</h5>
        <form action="/MaritalStatus/Update?id=@Model.Id" method="post">

            <div class="mb-3 row">
                <div class="col-3">
                    <label class="form-label">Marital Status</label>
                    <input type="text" class="form-control" value="@Model.Name" name="Name">
                </div>
            </div>
            <a href="/MaritalStatus" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
