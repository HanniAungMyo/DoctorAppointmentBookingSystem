@model List<DoctorAppointmentBookingSystem.Models.BookingModel>
@{
    ViewBag.Title = "Index";
    int row = 0;
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Booking List</h5>
        <a href="/Booking/Create" type="button" class="btn btn-primary mb-3">Create</a>
        <table id="myTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>PatientName</th>
                    <th>DoctorName</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    row = row + 1;
                    <tr>
                        <td>@row</td>
                        <td>@item.RegistrationName</td>
                        <td>@item.DoctorName</td>
                        <td>@item.BookingDate</td>
                        <td>

                            <a href="/Booking/UpdateStatusById?id=@item.Id" type="button" class="btn btn-primary">@item.Status</a>
                        </td>
                        <td>

                            <a href="/Booking/Edit?id=@item.Id" type="button" class="btn btn-success">Edit</a>
                            <a href="/Booking/Delete?id=@item.Id" type="button" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>
    </div>
