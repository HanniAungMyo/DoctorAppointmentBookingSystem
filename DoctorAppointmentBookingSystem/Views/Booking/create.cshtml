
@{
    ViewBag.Title = "create";
}

<div class="card">
    <div class="card-body">
        <h2>Create Booking</h2>
        <form action="/Booking/Save" method="post">
            <div class="mb-3 row">
                <label class="form-label">PatientName</label>
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example" name="RegistrationId">
                        @foreach (var item in ViewBag.lstRegistration)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="form-label">DoctorName</label>
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example" name="DoctorId">
                        @foreach (var item in ViewBag.lstDoctor)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">BookingDate</label>
                <input type="date" class="form-control" name="BookingDate">
            </div>
            <a href="/Booking" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        </div>
    </div>
