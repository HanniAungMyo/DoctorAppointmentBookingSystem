@model DoctorAppointmentBookingSystem.Data.Tbl_Booking
@{
    ViewBag.Title = "Edit";
    string selectedRegistration = string.Empty;
    string selectedDoctor = string.Empty;

}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Booking List</h5>
        <form action="/Booking/Update?id=@Model.Id" method="post">
            <div class="mb-3 row">
                <label class="form-label">PatientName</label>
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example" name="RegistrationId">
                        @foreach (var item in ViewBag.lstRegistration)
                        {
                            selectedRegistration = Model.RegistrationId == item.Id ? "selected" : string.Empty;
                            <option value="@item.Id" @selectedRegistration>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="form-label">DoctorName</label>
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example" name="DoctorId">
                        @foreach (var item in ViewBag.lstDoctor)
                        {
                            selectedDoctor = Model.DoctorId == item.Id ? "selected" : string.Empty;
                            <option value="@item.Id" @selectedDoctor>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <div class="col-3">
                    <label class="form-label">BookingDate</label>
                    <input type="date" class="form-control " name="BookingDate">
                </div>
            </div>

            <a href="/Booking" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
</div>
</div>