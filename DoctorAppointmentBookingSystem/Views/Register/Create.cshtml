
@{
    ViewBag.Title = "create";
}

<div class="card">
    <div class="card-body">
        <h2>Create Register</h2>
        <form action="/Register/Save" method="post">
            <div class="mb-3">
                <label class="form-label">UserName</label>
                <input type="text" class="form-control" name="UserName">
            </div>
            <div class="mb-3">
                <label class="form-label">LoginName</label>
                <input type="text" class="form-control" name="LoginName">
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="text" class="form-control" name="Password">
            </div>
            <div class="mb-3 row">
                <label class="form-label">RoleName</label>
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example" name="RoleId">
                        @foreach (var item in ViewBag.lstRole)
                        {
                            <option value="@item.Id">@item.RoleName</option>
                        }
                    </select>
                </div>
            </div>

            <a href="/Register" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
