@model List<DoctorAppointmentBookingSystem.Data.Tbl_NameType>
@{
    ViewBag.Title = "Index";
    int row = 0;
}

<h2>Name Type List</h2>
<a href="/NameType/Create" type="button" class="btn btn-primary mb-3">Create</a>
<table id="myTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            row = row + 1;
            <tr>
                <td>@row</td>
                <td>@item.Type</td>
                <td>
                    <a href="/NameType/Edit?id=@item.Id" type="button" class="btn btn-success">Edit</a>
                    <a href="/NameType/Delete?id=@item.Id" type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
