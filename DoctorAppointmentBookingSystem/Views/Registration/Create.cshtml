@{
    ViewBag.Title = "Create";
}

<div class="card">
    <div class="card-body">
        <h2>Create Registration</h2>
        <form action="/Registration/Save" method="post">
            <div class="mb-3 row">
                <label class="form-label">Name</label>
                <div class="col-1">
                    <select class="form-select" aria-label="Default select example" name="NameTypeId">
                        @foreach (var item in ViewBag.lstNameType)
                        {
                            <option value="@item.Id">@item.Type</option>
                        }
                    </select>
                </div>
                <div class="col-2">
                    <input type="text" class="form-control" name="Name">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Date Of Birth</label>
                <input type="date" class="form-control" name="Dob">
            </div>
            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <input type="text" class="form-control" name="PhoneNo">
            </div>
            <div class="mb-3">
                <label class="form-label">Father Name</label>
                <input type="text" class="form-control" name="FatherName">
            </div>
            <div class="mb-3">
                <label class="form-label d-block">Gender</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="Male" name="Gender" id="Male" checked>
                    <label class="form-check-label" for="Male">
                        Male
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="Female" name="Gender" id="Female">
                    <label class="form-check-label" for="Female">
                        Female
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">MaritalStatus</label>
                <select class="form-select" aria-label="Default select example" name="MaritalStatusId">
                    @foreach (var item in ViewBag.lstMaritalStatus)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <a href="/Registration" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        </div>
    </div>
