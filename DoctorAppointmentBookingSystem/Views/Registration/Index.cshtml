@model List<DoctorAppointmentBookingSystem.Models.RegistrationModel>
@{
    ViewBag.Title = "Index";
    int row = 0;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Registration List</h5>
        <a href="/Registration/Create" type="button" class="btn btn-primary mb-3">Create</a>
        <table id="myTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>PatientName</th>
                    <th>Gender</th>
                    <th>Date Of Birthday</th>
                    <th>Phone Number</th>
                    <th>Father Name</th>
                    <th>MaritalStatus</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    row = row + 1;
                    <tr>
                        <td>@row</td>
                        <td>@item.Name</td>
                        <td>@item.Gender</td>
                        <td>@item.Dob</td>
                        <td>@item.PhoneNo</td>
                        <td>@item.FatherName</td>
                        <td>@item.MaritalStatusName</td>
                        <td>
                            <a href="/Registration/Edit?id=@item.Id" type="button" class="btn btn-success">Edit</a>
                        </td>
                        <td>
                            <a href="/Registration/Delete?id=@item.Id" type="button" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        </div>
    </div>
