@model List<DoctorAppointmentBookingSystem.Models.DoctorModel>
@{
    ViewBag.Title = "Index";
    int row = 0;
}

<h2>Doctor</h2>
<a href="/Doctor/Create" type="button" class="btn btn-primary mb-3">Create</a>
<table id="myTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>No</th>
            <th>Doctor Name</th>
            <th>Speciality</th>
            <th class="text-center">DoctorFee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            row = row + 1;
            <tr>
                <td>@row</td>
                <td>@item.Name</td>
                <td>@item.SpecialityName</td>
                <td class="text-end">@item.DoctorFees.ToString("#,##0")</td>
                <td>
                    <a href="/Doctor/Edit?id=@item.Id" type="button" class="btn btn-success">Edit</a>
                    <a href="/Doctor/Delete?id=@item.Id" type="button" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }

    </tbody>
</table>

