﻿@model DoctorAppointmentBookingSystem.Data.Tbl_Doctor
@{
    ViewBag.Title = "Edit";
    var selectedTxt = string.Empty;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Edit Doctor List</h5>
        <form action="/Doctor/Update?id=@Model.Id" method="post">
            <div class="mb-3 row">
                <div class="col-3">
                    <label class="form-label">DoctorName</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-3">
                    <label class="form-label">Speciality</label>
                    <select class="form-select" aria-label="Default select example" name="SpecialityId">
                        @foreach (var item in ViewBag.lstSpeciality)
                        {
                            if (item.Id == Model.SpecialityId) { selectedTxt = "selected"; }

                            <option value="@item.Id" @selectedTxt>@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-3">
                    <label class="form-label">Doctor Fee</label>
                    <input type="number" class="form-control text-end" name="DoctorFees" value="@Model.DoctorFees">
                </div>
            </div>
            <a href="/Doctor" class="btn btn-dark">Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
</div>
</div>